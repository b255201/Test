@{
    ViewBag.Title = "Home Page";
}

@section heads
{
    @Styles.Render("~/Content/css/datatables")
    <style>
        table.dataTable tbody td {
            vertical-align: middle;
        }
    </style>
}
<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <!--顯示資料-->
        <table id="main" class="display" cellspacing="0" style="width:100%">
            <thead>
                <tr>
                    <th>姓氏</th>
                    <th>明子</th>
                    <th>電話</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

</div>

@section Scripts
{
  @Scripts.Render("~/bundles/datatables")

    <script>
            $(document).ready(function () {
                onSearch();
            });

            function search()
            {
                $('#main').DataTable({
                    "processing": true,
                    "serverSide": true,
                    "ajax": "../Employee/Search"
                });
            }

            function onSearch()
            {
              
                $("#main").DataTable({
                    "responsive": true,
                    "processing": true,
                    "serverSide": true,
                    "bAutoWidth": false,
                    "bDestroy": true,
                    "bInfo": true,
                    "bFilter": false,
                    "bSortable": true,
                    "orderMulti": false,
                    "bPaginate": true,
                    "bLengthChange": false,
                    "dom": "<'clear'>frtip",    //無工具列
                    "displayStart": 0,
                    "pageLength": 10,
                    "order": [[0, "asc"]],
                    "ajax": {
                        "type": "POST",
                        "url":  "../Employee/Search",                    
                        "error": function (msg) {
                            alert(msg);
                        }
                    },
                    "sServerMethod": "post",
                    "columns": [
                        { "data": "LastName" },
                        { "data": "FirstName"},
                        { "data": "HomePhone"},
                        { "data": "LastName" }
                    ],
                    "createdRow": function (row, data, index) {
                    },
                    "language": {
                        "info": "目前第 _START_ - _END_ 筆 ／ 共計 _TOTAL_ 筆",
                        "infoEmpty": "0筆",
                        "zeroRecords": "查無符合條件資料",
                        "lengthMenu": "每頁顯示 _MENU_ 筆資料",
                        "infoFiltered": "(從 _MAX_ 筆資料中篩選)",
                        "paginate": {
                            "first": "第一頁",
                            "last": "最後一頁",
                            "next": "下一頁",
                            "previous": "上一頁"
                        }
                    }
                })
            }


    </script>
}
